conky.config = {
	alignment = 'bottom_left',
	background = true,
	cpu_avg_samples = 2,
	default_color = 'ECECEC',
	double_buffer = true,
	draw_shades = false,
	font = 'FiraCode Nerd Font:size=12:bold',
	gap_x = 25,
	gap_y = 36,
	minimum_width = 300,
	minimum_height = 440,
	no_buffers = true,
	own_window = true,
	own_window_argb_value = 200,
	own_window_argb_visual = true,
	own_window_class = 'Conky',
	own_window_colour = '#222831',
	own_window_transparent = false,
	own_window_hints = 'undecorated,below,above,sticky,skip_taskbar,skip_pager',
	own_window_type = 'override',
	update_interval = 1.0,
	use_xft = true,
	color1 = '51FFC5',
	color2 = 'ECECEC',
	color3 = '00FF33',

}
conky.text = [[
$alignr${color2}${font FiraCode Nerd Font:size=16:bold}${time %A}${font}
$alignr${color2}${font FiraCode Nerd Font:size=14}${time %e} ${time %b} ${time %Y}${font}
$hr
#
${voffset 5}${goto 20}${color2}${font FiraCode Nerd Font:size=11:bold}CPU$alignr${color2}$cpu%${font}
${voffset 0}${goto 40}${color2}${font FiraCode Nerd Font:size=10:bold}${top name 1}$alignr${color1}${top cpu 1}%${font}
${goto 40}$color2${font FiraCode Nerd Font:size=11}${top name 2}$alignr${color1}${top cpu 2}%${font}
${goto 40}$color2${font FiraCode Nerd Font:size=11}${top name 3}$alignr${color1}${top cpu 3}%${font}
${goto 40}$color2${font FiraCode Nerd Font:size=11}${top name 4}$alignr${color1}${top cpu 4}%${font}
${goto 40}$color2${font FiraCode Nerd Font:size=11}${top name 5}$alignr${color1}${top cpu 5}%${font}
#
${voffset 10}${goto 20}${color2}${font FiraCode Nerd Font:size=11:bold}RAM$alignr$mem${font}
${goto 40}${voffset 0}${color2}${font FiraCode Nerd Font:size=10:bold}${top_mem name 1}$alignr${color1}${top_mem mem_res 1}${font}
${goto 40}$color2${font FiraCode Nerd Font:size=11}${top_mem name 2}$alignr${color1}${top_mem mem_res 2}${font}
${goto 40}$color2${font FiraCode Nerd Font:size=11}${top_mem name 3}$alignr${color1}${top_mem mem_res 3}${font}
${goto 40}$color2${font FiraCode Nerd Font:size=11}${top_mem name 4}$alignr${color1}${top_mem mem_res 4}${font}
${goto 40}$color2${font FiraCode Nerd Font:size=11}${top_mem name 5}$alignr${color1}${top_mem mem_res 5}${font}
#
$hr
#${color2}${alignr}${execi 1200 whoami}@${nodename}
${color2}${font FiraCode Nerd Font:size=10:bold}${alignr}Kernel: ${color2}${kernel}${font}
${alignr}${color2}${font FiraCode Nerd Font:size=10:bold}Uptime: ${color2}${uptime_short}${font}
${voffset 0}$alignr$color${font FiraCode Nerd Font:size=12:bold}${execi 5000 lsb_release -d | grep 'Descr'|awk {'print $2 " " $3" " $4" " $5'}}${font}
]]
